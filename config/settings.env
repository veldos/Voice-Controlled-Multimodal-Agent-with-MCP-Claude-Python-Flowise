# Voice-Controlled Multimodal Agent Configuration

# API Keys (set these as environment variables)
OPENAI_API_KEY=""
PINECONE_API_KEY=""
PINECONE_ENVIRONMENT="us-west1-gcp"
CLAUDE_API_KEY=""
SERPER_API_KEY=""  # For web search
N8N_API_KEY=""
FLOWISE_API_KEY=""

# MCP Server Configuration
MCP_SERVER_HOST="localhost"
MCP_SERVER_PORT=8000
MCP_SERVER_LOG_LEVEL="INFO"

# Audio Processing Settings
WHISPER_MODEL="base"
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
MAX_AUDIO_LENGTH=300  # seconds

# Document Processing
PINECONE_INDEX_NAME="voice-agent-docs"
PINECONE_DIMENSION=1536
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_DOCUMENT_SIZE=10485760  # 10MB

# Image Processing
MAX_IMAGE_SIZE=5242880  # 5MB
SUPPORTED_IMAGE_FORMATS=["jpg", "jpeg", "png", "gif", "bmp", "webp"]

# Web Search Settings
WEB_SEARCH_MAX_RESULTS=10
WEB_SEARCH_TIMEOUT=30

# Security Settings
ENABLE_API_KEY_PROTECTION=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour
ALLOWED_ORIGINS=["localhost", "127.0.0.1"]

# Logging and Monitoring
LOG_LEVEL="INFO"
LOG_FILE="logs/voice_agent.log"
ENABLE_TELEMETRY=true
GDPR_COMPLIANT_LOGGING=true

# n8n Configuration
N8N_BASE_URL="http://localhost:5678"
N8N_WEBHOOK_URL="http://localhost:5678/webhook"

# Flowise Configuration
FLOWISE_BASE_URL="http://localhost:3000"
FLOWISE_API_PATH="/api/v1/prediction"

# Claude Desktop MCP Config
CLAUDE_DESKTOP_CONFIG_PATH="~/.claude_desktop_config.json"